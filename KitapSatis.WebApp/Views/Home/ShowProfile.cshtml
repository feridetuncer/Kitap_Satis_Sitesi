@using KitapSatis.Entities
@model Kullanici
@{
    ViewBag.Title = "Kullanıcı Profili";
}

<div class="container">
    <div class=" row">
        <h2>@ViewBag.Title</h2>
        <hr/>
    </div>
    <div class="row">
        <div class="col-md-2">
            <img src="~/Images/user.png" class="img-circle" width="128" height="128"/>
        </div>
        <div class=" col-md-8">
            <h3>@(Model.Ad + " " + Model.Soyad)</h3>
            <br />
            <h6><b>Kullanıcı Adı: </b>@Model.KullaniciAdi</h6>
            <h6><b>Email: </b>@Model.Email</h6>
            <br/>
            <h6><a href="#">Daha Fazla...</a></h6>
        </div>
        <div class="col-md-2 text-right">
            <div class="btn-group">
                <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                    Seçenekler
                    <span class="icon-cog icon-white"></span> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("EditProfile")" ><span class="glyphicon glyphicon-edit">&nbsp;</span>
                        Düzenle
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("footer").parent().hide();
    });
</script>
