@model IEnumerable<KitapSatis.Entities.Kitap>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kitaplar</h2>
    </div>

</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kategori.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KitapAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Yazar)
