@using KitapSatis.Entities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Bootstrap Core CSS -->



    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Custom CSS -->

    <link href="~/Content/shop-homepage.css" rel="stylesheet" />



    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @{ 
        Kullanici user = null;
        if (Session["login"]!=null)
        {
            user = Session["login"] as Kullanici;
        }
    }
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">Kitap Satış</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                   
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true">
                                <span class="glyphicon glyphicon-wrench"></span> Yönetim <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Kitap/Create"> <span class="glyphicon glyphicon-plus"> Kitap Ekle</span></a></li>
                                <li><a href="/Kitap/Index"> <span class="glyphicon glyphicon-th-list"> Kitaplar</span></a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Kategori/Create"> <span class="glyphicon glyphicon-plus"> Kategori Ekle</span></a></li>
                                <li><a href="/Kategori/Index"> <span class="glyphicon glyphicon-th-list"> Kategoriler</span></a></li>
                            </ul>
                        </li>

                        
                    }

                    <li>
                        <a href="/Home/CokSatanlar">
                            <span class="glyphicon glyphicon-heart"></span> En Çok Satanlar
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                            <span class="glyphicon glyphicon-th-list"></span> Son Çıkanlar
                        </a>
                    </li>

                    <li>
                        <a href="#">Sepet</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Giris">
                                <span class="glyphicon glyphicon-log-in"></span> Giriş Yap
                            </a>
                        </li>
                        <li>
                            <a href="/Home/UyeOl">
                                <span class="glyphicon glyphicon-user"></span> Üye Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="/Home/ShowProfile">
                                <span class="glyphicon glyphicon-user"></span> @user.KullaniciAdi
                            </a>
                        </li>
                        <li>
                            <a href="/Home/Cikis">
                                <span class="glyphicon glyphicon-log-out"></span> Çıkış Yap
                            </a>
                        </li>
                    }

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    
   @RenderBody()
    <!-- /.container -->
    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <h5>
                        <strong>
                            Site Haritası
                        </strong>
                    </h5> <hr />
                    <p>
                        <a href="#"> En Çok Satanlar</a> <br />
                        <a href="#"> Son Çıkanlar</a> <br />
                        
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <h5>
                        <strong>
                            Kitap Satış
                        </strong>
                    </h5> <hr />
                    <p>Tüm hakları saklıdır. &copy; Kitap Satış @DateTime.Now.Year</p>
                </div>
                <div class="col-lg-4 text-center">
                    <h5>
                        <strong>
                            E-Bülten
                        </strong>
                    </h5> <hr />
                    <div class="col-md-10 col-md-offset-1">
                        <p>
                            metin......
                        </p>
                        <div class="input-group">
                            <input type="text" placeholder="e-posta adresiniz" class="form-control" />

                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-send"> </span> Gönder</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
 
        </footer>
    </div>
    <!-- /.container -->

</body>
</html>
